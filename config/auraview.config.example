<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <paths>
    <!-- Update these to your actual media/template/font/log locations -->
    <media-path>./media/</media-path>
    <log-path disable="false">./log/</log-path>
    <data-path>./data/</data-path>
    <template-path>./templates/</template-path>
    <font-path>./fonts/</font-path>
  </paths>

  <!-- Optional, if you use lock/clear -->
  <lock-clear-phrase>secret</lock-clear-phrase>

  <channels>
    <!-- Channel 1 → DP-3 (3840x2160 at +1024+0) -->
    <channel>
      <video-mode>2160p3000</video-mode>
      <consumers>
        <screen>
          <!-- device is often ignored on Linux; geometry is authoritative -->
          <device>2</device>
          <name>DP-3</name>
          <aspect-ratio>16:9</aspect-ratio>
          <interactive>false</interactive>
          <borderless>true</borderless>
          <windowed>true</windowed>        <!-- set false after verifying placement -->
          <vsync>true</vsync>
          <always-on-top>true</always-on-top>
          <x>1024</x>
          <y>0</y>
          <width>3840</width>
          <height>2160</height>
        </screen>
        <system-audio/>
      </consumers>
    </channel>

    <!-- Channel 2 → HDMI-0 (3840x2160 at +4864+0) -->
    <channel>
      <video-mode>2160p3000</video-mode>
      <consumers>
        <screen>
          <device>3</device>
          <name>HDMI-0</name>
          <aspect-ratio>16:9</aspect-ratio>
          <interactive>false</interactive>
          <borderless>true</borderless>
          <windowed>true</windowed>        <!-- set false after verifying placement -->
          <vsync>true</vsync>
          <always-on-top>true</always-on-top>
          <x>4864</x>
          <y>0</y>
          <width>3840</width>
          <height>2160</height>
        </screen>
        <system-audio/>
      </consumers>
    </channel>
  </channels>

  <!-- Controllers: this is where AMCP lives in your working example -->
  <controllers>
    <tcp>
      <port>2520</port>          <!-- use 5250 if you prefer the standard -->
      <protocol>AMCP</protocol>
      <!-- Optional: restrict IPs
      <allow>127.0.0.1</allow>
      -->
    </tcp>
  </controllers>

  <!-- Optional: AMCP media-server stanza (kept to match your reference) -->
  <amcp>
    <media-server>
      <host>localhost</host>
      <port>8000</port>
    </media-server>
  </amcp>

  <!-- HTML/CEF options -->
  <html>
    <enabled>true</enabled>
    <accelerated-rendering>true</accelerated-rendering>
    <enable-gpu>true</enable-gpu>
    <angle-backend>default</angle-backend>
    <cef-args>
      <arg>--ignore-gpu-blacklist</arg>
      <arg>--enable-webgl</arg>
      <arg>--enable-accelerated-2d-canvas</arg>
    </cef-args>
  </html>
</configuration>
